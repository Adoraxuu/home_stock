<div class="max-w-2xl mx-auto">
  <h1 class="text-4xl font-bold text-gray-900 mb-8">新增庫存項目</h1>

  <%= form_with(model: [@family, @inventory_item], class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4") do |form| %>
    <% if @inventory_item.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <strong class="font-bold">發生錯誤：</strong>
        <ul class="mt-2">
          <% @inventory_item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :brand, "品牌", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :brand, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "例如：好市多" %>
    </div>

    <div class="mb-4">
      <%= form.label :name, "品項名稱", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "例如：廚房紙巾" %>
    </div>

    <div class="mb-4">
      <%= form.label :category, "種類", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :category, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "例如：生活用品" %>
    </div>

    <div class="grid grid-cols-2 gap-4 mb-4">
      <div>
        <%= form.label :quantity, "數量", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.number_field :quantity, step: 0.01, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div>
        <%= form.label :unit, "單位", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_field :unit, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "例如：包、瓶、個" %>
      </div>
    </div>

    <div class="mb-6">
      <%= form.label :notes, "備註", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_area :notes, rows: 3, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "選填" %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "新增", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to "取消", family_path(@family), class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
    </div>
  <% end %>
</div>
